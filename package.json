{
  "name": "api-test-automation-framework",
  "version": "1.0.0",
  "description": "API Test Automation Framework using TypeScript and Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "report": "playwright show-report",
    "build": "tsc"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "typescript",
    "test-automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@testcontainers/postgresql": "^10.7.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "playwright": "^1.57.0",
    "testcontainers": "^10.7.0"
  }
}
